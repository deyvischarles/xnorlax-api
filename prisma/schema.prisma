datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String  @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email   String   @unique
  password String
  name    String
  profile Profile?
}

model Profile {
  id     String  @id @default(uuid())
  bio    String
  user   User   @relation(fields: [userId], references: [id])
  userId String    @unique
}
